generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id             Int       @default(autoincrement())
  user_uuid      String    @db.VarChar(64)
  user_game_id   String?   @db.VarChar(64)
  user_password  String?   @db.VarChar(255)
  user_email     String?   @db.VarChar(255)
  user_score     Int?
  is_whitelist   Int       @default(0)
  user_image_url String?   @db.VarChar(255)
  user_QQ        String?   @db.VarChar(128)
  create_time    DateTime? @db.DateTime(0)
  update_time    DateTime? @db.DateTime(0)
  user_is_ban    Int       @default(0)

  @@id([id, user_uuid])
}

model article {
  id               Int     @id @default(autoincrement())
  article_title    String? @db.VarChar(255)
  article_subtitle String? @db.VarChar(255)
  article_text     String? @db.VarChar(255)
  article_content  String? @db.VarChar(255)
  article_img      String? @db.VarChar(255)
}

model code {
  code       Int?
  user_email String    @id @db.VarChar(255)
  code_time  DateTime? @db.DateTime(0)
}

model comment {
  id            Int       @id
  user_uuid     String?   @db.VarChar(128)
  comment_text  String?   @db.Text
  create_time   DateTime? @db.DateTime(0)
  comment_title String?   @db.VarChar(255)
}

model counter {
  id          Int       @id @default(autoincrement())
  count_item  String?   @db.VarChar(255)
  count_num   Int?
  update_time DateTime? @db.DateTime(0)
  create_time DateTime? @db.DateTime(0)
}

model paper {
  id            Int       @default(autoincrement())
  user_uuid     String    @db.Char(255)
  paper_content String?   @db.LongText
  paper_score   Int?      @default(0)
  paper_percent Int?
  create_time   DateTime? @db.DateTime(0)

  @@id([id, user_uuid])
}

model question {
  id              Int     @id
  question_type   String? @db.VarChar(16)
  user_id         Int?
  question_title  String? @db.VarChar(255)
  question_text   String? @db.VarChar(255)
  question_option String? @db.VarChar(255)
  question_answer String? @db.VarChar(255)
  question_score  Int?
}

model gallery {
  id          Int       @id
  img_url     String?   @db.VarChar(255)
  user_uuid   Int
  create_time DateTime? @db.DateTime(0)
  title       String?   @db.VarChar(255)
  intro       String?   @db.VarChar(255)
  status      Int?      @db.TinyInt
  update_time DateTime? @db.DateTime(0)
}

model leave_message {
  id          Int       @id @default(autoincrement())
  create_time DateTime? @db.DateTime(0)
  message     String?   @db.Text
  user_uuid   String    @db.VarChar(64)
  type        Int?
}
